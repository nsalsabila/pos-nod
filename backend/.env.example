# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/nod_pos_dev
DATABASE_URL_TEST=postgresql://user:password@localhost:5432/nod_pos_test

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# Authentication & Security
JWT_SECRET=your-secret-key-change-in-production
WEBHOOK_SECRET=webhook-secret-key

# External Services - Payments
XENDIT_API_KEY=
STRIPE_API_KEY=
ADYEN_API_KEY=

# External Services - Communications
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER=

# Logging
LOG_FORMAT=json
LOG_OUTPUT=console

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_REAL_TIME_SYNC=true
